{
  "name": "server",
  "version": "1.0.0",
  "description": "api server",
  "main": "server.ts",
  "author": "Paolo Cattani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/paolocattani/calcetto"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prod:build": "tsc --pretty",
    "prod:heroku:server": "pm2-runtime start ecosystem.config.js --env production",
    "prod:heroku:server_opt": "./node_modules/.bin/ts-node server.ts --optimize_for_size --max_old_space_size=460 --gc_interval=100",
    "prod:ts": " ../node_modules/.bin/ts-node server.ts ",
    "dev": "./node_modules/.bin/nodemon --config \"./nodemon.json\"",
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:unit:watch": "cross-env NODE_ENV=test jest -o --watch --detectOpenHandles",
    "test:unit:coverage": "cross-env NODE_ENV=test --coverage --detectOpenHandles",
    "test:e2e": "cross-env NODE_ENV=test start-server-and-test prod 5001 test:coverage",
    "prod": "node build_server/server/server.js",
    "build_tsconfig": "./node_modules/.bin/tsc --project tsconfig.prod.json ",
    "build": "./node_modules/.bin/tsc --pretty --emitDecoratorMetadata --esModuleInterop --experimentalDecorators  --forceConsistentCasingInFileNames --isolatedModules --listFiles --listEmittedFiles --noErrorTruncation --outDir ./build_server --removeComments --skipLibCheck --downlevelIteration server.ts",
    "test": "snyk test"
  },
  "jest": {
    "testTimeout": 10000,
    "testEnvironment": "node",
    "globalSetup": "./test/jest.setup.ts",
    "globalTeardown": "./test/jest.teardown.ts",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "lines": 95,
        "functions": 95
      }
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  },
  "devDependencies": {
    "@types/csurf": "^1.11.0",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.20",
    "@types/node-fetch": "^2.5.8",
    "@types/node-schedule": "^1.3.1",
    "@types/ratelimiter": "^3.4.1",
    "@types/redis": "^2.8.28",
    "@types/request-ip": "0.0.35",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.7",
    "snyk": "^1.458.0",
    "start-server-and-test": "^1.12.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-redis": "^5.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "express-session": "^1.17.1",
    "helmet": "^4.4.1",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "morgan": "^1.10.0",
    "node-schedule": "^2.0.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "pm2": "^4.5.4",
    "ratelimiter": "^3.4.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "sequelize": "^6.5.0",
    "sequelize-cli": "^6.2.0",
    "sequelize-typescript": "^2.0.0",
    "ts-node": "^9.1.1",
    "umzug": "^3.0.0-beta.15",
    "uuid": "^8.3.2"
  }
}
