{
  "name": "server",
  "version": "1.0.0",
  "description": "api server",
  "main": "server.ts",
  "author": "Paolo Cattani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/paolocattani/calcetto.git/"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prod:build": "tsc --pretty",
    "prod:heroku:server": "./node_modules/.bin/ts-node server.ts --optimize_for_size --max_old_space_size=460 --gc_interval=100",
    "prod": " ../node_modules/.bin/ts-node server.ts ",
    "dev": "nodemon --config \"./nodemon.json\"",
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:unit:watch": "cross-env NODE_ENV=test jest -o --watch --detectOpenHandles",
    "test:unit:coverage": "cross-env NODE_ENV=test --coverage --detectOpenHandles",
    "test:e2e": "cross-env NODE_ENV=test start-server-and-test prod 5001 test:coverage"
  },
  "jest": {
    "testTimeout": 10000,
    "testEnvironment": "node",
    "globalSetup": "./test/jest.setup.ts",
    "globalTeardown": "./test/jest.teardown.ts",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "lines": 95,
        "functions": 95
      }
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node-fetch": "^2.5.7",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.1",
    "start-server-and-test": "^1.11.7",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "helmet": "^4.3.1",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.3.5",
    "sequelize-cli": "^6.2.0",
    "sequelize-typescript": "^2.0.0-beta.1",
    "ts-node": "^9.1.1",
    "umzug": "^2.3.0",
    "umzug-typescript-helper": "^1.0.10",
    "uuid": "^8.3.2"
  }
}
