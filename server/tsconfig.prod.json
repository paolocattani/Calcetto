{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"pretty": true,
		/* Basic Options */
		// Must be "es6" due to sequelize . Ref https://github.com/sequelize/sequelize/issues/7840
		"target": "es2020",
		"module": "commonjs", //*
		"lib": ["es2020"], //*
		"strict": true,
		"allowJs": true, //*
		"checkJs": true, //*
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		//"listFiles": true,
		//"listEmittedFiles": true,
		"noErrorTruncation": true,
		"outDir": "./build_server",
		"removeComments": true,
		"skipLibCheck": true,
		"downlevelIteration": true,
		"moduleResolution": "node", //*
		"allowSyntheticDefaultImports": true //*
	},
	"include": [
		".",
		"src/@common"
	],
	"exclude": ["./src/*","./test","**/*.test.ts","node_modules","build_server"]
}