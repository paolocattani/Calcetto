{
  "name": "calcetto",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:8080",
  "repository": {
    "type": "git",
    "url": "https://github.com/paolocattani/calcetto.git/"
  },
  "homepage": "https://github.com/paolocattani/calcetto#readme",
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint . --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.15.15",
    "@types/glob": "^7.1.1",
    "@types/helmet": "0.0.45",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.9",
    "@types/passport": "^1.0.1",
    "@types/passport-auth0": "^1.0.2",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express-jwt": "^5.3.1",
    "express-jwt-authz": "^2.3.1",
    "express-session": "^1.17.0",
    "glob": "^7.1.6",
    "helmet": "^3.21.2",
    "jwks-rsa": "^1.6.0",
    "log4js": "^6.0.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.4",
    "passport": "^0.4.0",
    "passport-auth0": "^1.2.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.2.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && nodemon --config \"./nodemon.json\"/",
    "dev:client": "react-scripts start ",
    "prod": "concurrently --kill-others-on-fail \"npm run prod:server\" \"npm run prod:client\"",
    "prod:server": "cd server && nodemon --config \"./nodemon.json\"/",
    "prod:client": "react-scripts build && serve -s build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
