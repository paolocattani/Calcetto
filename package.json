    "ts-node": "^8.6.2",
    "typeface-roboto": "0.0.75",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && nodemon --config \"./nodemon.json\"",
    "dev:client": "react-scripts start ",
    "prod:heroku": "npm run prod:heroku:client && npm run prod:heroku:server",
    "prod:heroku:server": "./node_modules/.bin/ts-node --project ./server/tsconfig.json ./server/server.ts  server.js --optimize_for_size --max_old_space_size=460 --gc_interval=100",
    "prod:heroku:client": "node --optimize_for_size --max_old_space_size=460 -gc_interval=100 node_modules/.bin/react-scripts build",
    "start": "npm run prod:heroku:server",
    "CRA:start": "react-scripts start",
    "CRA:build": "react-scripts build",
    "CRA:test": "react-scripts test",
    "CRA:eject": "react-scripts eject",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-node": "0.0.1-security",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  }
}
