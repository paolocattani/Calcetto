  "private": true,
  "proxy": "http://localhost:5001",
  "repository": {
    "type": "git",
    "url": "https://github.com/paolocattani/calcetto.git/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint . --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
