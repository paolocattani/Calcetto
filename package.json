{
  "name": "calcetto",
  "private": false,
  "version": "2.9.9",
  "description": "Table Soccer Manager",
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "keywords": [
    "react",
    "table soccer",
    "typescript",
    "sequelize"
  ],
  "proxy": "http://localhost:5001",
  "repository": {
    "type": "git",
    "url": "github.com/paolocattani/calcetto"
  },
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint . --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/free-regular-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^4.5.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "helmet": "^4.1.1",
    "i18next": "^19.7.0",
    "i18next-browser-languagedetector": "^6.0.1",
    "i18next-http-backend": "^1.0.21",
    "jquery": "^3.5.1",
    "jsonwebtoken": "^8.5.1",
    "localforage": "^1.9.0",
    "log4js": "^6.3.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "react": "^16.13.1",
    "react-bootstrap": "^1.3.0",
    "react-bootstrap-table-next": "^4.0.3",
    "react-bootstrap-table2-editor": "^1.4.0",
    "react-bootstrap-table2-filter": "^1.3.3",
    "react-bootstrap-table2-toolkit": "^2.1.3",
    "react-datepicker": "^3.1.3",
    "react-dom": "^16.13.1",
    "react-facebook-login": "^4.1.1",
    "react-google-login": "^5.1.21",
    "react-i18next": "^11.7.3",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "react-select": "^3.1.0",
    "react-toastify": "^6.0.8",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.22.3",
    "sequelize-cli": "^5.5.1",
    "sequelize-typescript": "^1.1.0",
    "swagger-ui-react": "^3.34.0",
    "ts-node": "^9.0.0",
    "typeface-roboto": "0.0.75",
    "typesafe-actions": "^5.1.0",
    "typescript": "^3.9.7",
    "umzug": "^2.3.0",
    "uuid": "^7.0.3"
  },
  "scripts": {
    "dev": "concurrently -p \"[{name}]\" -n server,client -c \"bgGreen.bold,bgBlue.bold\"  --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && nodemon --config \"./nodemon.json\"",
    "dev:client": "react-scripts start ",
    "prod:build:server": "tsc --pretty --allowJs --outDir ./build_server -p ./server/tsconfig.json",
    "prod:heroku": "npm i && npm run prod:heroku:server",
    "prod:heroku:server": "./node_modules/.bin/ts-node --project ./server/tsconfig.json ./server/server.ts  server.js --optimize_for_size --max_old_space_size=460 --gc_interval=100",
    "prod:heroku:client": "node --optimize_for_size --max_old_space_size=460 -gc_interval=100 node_modules/.bin/react-scripts build",
    "start": "npm run prod:heroku:server",
    "CRA:start": "react-scripts start",
    "CRA:build": "react-scripts build ",
    "CRA:eject": "react-scripts eject",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:coverage": "react-scripts test --coverage --env=jest-environment-jsdom-sixteen  --watchAll=false --silent --testResultsProcessor ./node_modules/jest-sonar-reporter ",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache --env=jest-environment-jsdom-sixteen",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "lint:report": "./node_modules/.bin/eslint -f json -o ./analysis/report.json .",
    "analyze": "source-map-explorer build/static/js/*.js --html analysis/build-analysis.html"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@ljharb/eslint-config": "^17.2.0",
    "@shinnn/eslint-config": "^7.0.0",
    "@testing-library/dom": "^7.24.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.10",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.32",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/helmet": "0.0.48",
    "@types/history": "^4.7.8",
    "@types/jest": "^24.9.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.14.2",
    "@types/react": "^16.9.52",
    "@types/react-bootstrap-date-picker": "^4.0.6",
    "@types/react-bootstrap-table-next": "^4.0.8",
    "@types/react-datepicker": "^2.11.1",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-select": "^3.0.22",
    "@types/react-test-renderer": "^16.9.3",
    "@types/redux-mock-store": "^1.0.2",
    "@types/swagger-ui-react": "^3.23.3",
    "@types/umzug": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-node": "0.0.1-security",
    "concurrently": "^5.3.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-sinon": "^4.0.0",
    "eslint-config-strict": "^14.0.1",
    "eslint-plugin-ie11": "^1.0.0",
    "eslint-plugin-jsdoc": "^30.7.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-testing-library": "^3.9.2",
    "install": "^0.13.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-fetch-mock": "3.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^2.1.2",
    "redux-mock-store": "^1.5.4",
    "source-map-explorer": "^2.5.0",
    "ts-jest": "^24.3.0"
  },
  "jestSonar": {
    "reportPath": "analysis",
    "reportFile": "jest-sonar-report.xml",
    "indent": 4
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx",
      "./src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "lines": 95,
        "functions": 95
      }
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  }
}
