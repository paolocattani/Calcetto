    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/express-session": "^1.17.0",
    "@types/glob": "^7.1.1",
    "@types/helmet": "0.0.45",
    "@types/jest": "^24.9.1",
    "@types/morgan": "^1.9.0",
    "@types/node": "^12.12.29",
    "@types/passport": "^1.0.2",
    "@types/passport-auth0": "^1.0.4",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-select": "^3.0.10",
    "@types/validator": "^12.0.1",
    "bcrypt": "^4.0.1",
    "bootstrap": "^4.4.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "glob": "^7.1.6",
    "helmet": "^3.21.3",
    "jquery": "^3.4.1",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.1.2",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.4",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "primereact": "^3.4.0",
    "react": "^16.13.0",
    "react-bootstrap": "^1.0.0-beta.17",
    "react-bootstrap-table-next": "^3.3.5",
    "react-bootstrap-table2-editor": "^1.4.0",
    "react-bootstrap-table2-filter": "^1.3.1",
    "react-bootstrap-table2-toolkit": "^2.1.2",
    "react-dom": "^16.13.0",
