{
  "name": "calcetto",
  "private": false,
  "version": "2.13.4",
  "description": "Table Soccer Manager",
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "keywords": [
    "react",
    "table soccer",
    "typescript",
    "sequelize"
  ],
  "proxy": "http://localhost:5001",
  "repository": {
    "type": "git",
    "url": "github.com/paolocattani/calcetto"
  },
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint . --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-brands-svg-icons": "^5.15.2",
    "@fortawesome/free-regular-svg-icons": "^5.15.2",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "bootstrap": "^4.5.3",
    "i18next": "^19.8.5",
    "i18next-browser-languagedetector": "^6.0.1",
    "i18next-http-backend": "^1.0.21",
    "jquery": "^3.5.1",
    "localforage": "^1.9.0",
    "react": "^16.14.0",
    "react-bootstrap": "^1.4.3",
    "react-bootstrap-table-next": "^4.0.3",
    "react-bootstrap-table2-editor": "^1.4.0",
    "react-bootstrap-table2-filter": "^1.3.3",
    "react-bootstrap-table2-toolkit": "^2.1.3",
    "react-cookie-consent": "^6.2.2",
    "react-datepicker": "^3.3.0",
    "react-dom": "^16.14.0",
    "react-facebook-login": "^4.1.1",
    "react-google-login": "^5.2.2",
    "react-i18next": "^11.8.5",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.0",
    "react-select": "^3.1.1",
    "react-toastify": "^7.0.3",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "swagger-ui-react": "^3.39.0",
    "typeface-roboto": "^1.1.13",
    "typesafe-actions": "^5.1.0",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "-----DEVELOPMENT----": "---------------------------",
    "dev": "concurrently -p \"[{name}]\" -n server,client -c \"bgGreen.bold,bgBlue.bold\"  --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "npm run CRA:start",
    "-----PRODUCTION----": "---------------------------",
    "prod:server": "cd server && npm run prod",
    "prod:build:server": "tsc --pretty --allowJs --outDir ./build_server -p ./server/tsconfig.json",
    "-----HEROKU----": "---------------------------",
    "heroku-prebuild": "cd server && npm ci && ./node_modules/.bin/pm2 install pm2-intercom",
    "heroku-postbuild": "npm run CRA:build ",
    "heroku-cleanup": "echo This runs after Heroku prunes and caches dependencies.",
    "start": "cd server && npm run prod:heroku:server",
    "-----CRA----": "---------------------------",
    "CRA:start": "react-scripts --require @cypress/instrument-cra start",
    "CRA:build": "react-scripts build ",
    "CRA:eject": "react-scripts eject",
    "CRA:test": "react-scripts test",
    "-----TEST----": "---------------------------",
    "test:app": "concurrently -p \"[{name}]\" -n server,client -c \"bgGreen.bold,bgBlue.bold\"  --kill-others-on-fail \"npm run test:app:server\" \"npm run test:app:client\"",
    "test:app:server": "cross-env NODE_ENV=test npm run prod:heroku:server",
    "test:app:server:coverage": "cross-env NODE_ENV=test nyc --silent npm run dev:server",
    "test:app:client": "cross-env NODE_ENV=test CI=true BROWSER=NONE npm run CRA:start",
    "test:client:coverage": "react-scripts test --coverage --watchAll=false --silent --testResultsProcessor ./node_modules/jest-sonar-reporter ",
    "test:client:debug": "react-scripts --inspect-brk test --runInBand --no-cache --env=jest-environment-jsdom-sixteen",
    "test:e2e": "cross-env NODE_ENV=test start-server-and-test test:app 5000 cypress:run",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run  --record --key d290f2c0-5104-4643-96ff-ba6f773d0a9c --browser chrome --headless",
    "-----LINT, ANALYZE----": "---------------------------",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "lint:report": "./node_modules/.bin/eslint -f json -o ./analysis/eslint-report.json .",
    "analyze": "source-map-explorer build/static/js/*.js --html analysis/build-analysis.html",
    "-----CLI----": "---------------------------",
    "cli_release": "sh cli/cli release",
    "cli_build": "sh cli/cli build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.2",
    "@cypress/instrument-cra": "^1.4.0",
    "@cypress/webpack-preprocessor": "^5.5.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@ljharb/eslint-config": "^17.3.0",
    "@shinnn/eslint-config": "^7.0.0",
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.33",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/history": "^4.7.8",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.22",
    "@types/react": "^16.14.2",
    "@types/react-bootstrap-date-picker": "^4.0.6",
    "@types/react-bootstrap-table-next": "^4.0.10",
    "@types/react-datepicker": "^2.11.1",
    "@types/react-dom": "^16.9.10",
    "@types/react-redux": "^7.1.15",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-select": "^3.0.27",
    "@types/react-test-renderer": "^17.0.0",
    "@types/redux-mock-store": "^1.0.2",
    "@types/swagger-ui-react": "^3.35.0",
    "@types/umzug": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.13.0",
    "babel-node": "0.0.1-security",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "cypress": "^6.3.0",
    "cypress-intellij-reporter": "0.0.6",
    "cypress-plugin-snapshots": "^1.4.4",
    "cypress-skip-and-only-ui": "^1.2.10",
    "cypress-watch-and-reload": "^1.3.2",
    "eslint": "^7.19.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-sinon": "^4.0.0",
    "eslint-config-strict": "^14.0.1",
    "eslint-plugin-ie11": "^1.0.0",
    "eslint-plugin-jsdoc": "^30.7.13",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "install": "^0.13.0",
    "istanbul-lib-coverage": "^3.0.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-fetch-mock": "3.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "redux-mock-store": "^1.5.4",
    "source-map-explorer": "^2.5.2",
    "source-map-support": "^0.5.19",
    "start-server-and-test": "^1.11.7",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "webpack": "^4.44.2"
  },
  "jestSonar": {
    "useRelativePath": true,
    "reportPath": "analysis",
    "reportFile": "jest-sonar-report.xml",
    "indent": 4
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx",
      "./src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "lines": 95,
        "functions": 95
      }
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  }
}